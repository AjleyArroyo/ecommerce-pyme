<% if item_count>0 %>
  <style>
    .cart-icon{
      color: #0074c2;
    }
    .cart-icon-count{
      background: #0074c2;
    }
  </style>
<% end %>
<%= link_to spree.cart_path,
            class: "cart-icon cart-icon--visible-count #{local_assigns[:class]}",
            'aria-label': Spree.t(:cart) do %>
  <%= icon(name: 'cart',
           width: size,
           height: size) %>

  <div class="font-weight-medium cart-icon-count"><%= item_count %></div>
<% end %>

