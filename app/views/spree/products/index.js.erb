$('#infinite-scroll').append('<%= j render(:partial => 'spree/shared/products_row', :locals => {products: @products}) %>');
<% if @products.current_page < @products.total_pages %>


  $('.pagination').replaceWith('<%= j paginate(@products) %>').hide();
  BWLD.can_scroll = true

<% else %>
  $('.pagination').remove();
  $('#loading').hide();


<% end %>